<div class="container">
	<h1 class="text-center"> Crear Artículo</h1>
</div>


<%= form_for(@article) do |f| %>

	<div class="container">

	<% @article.errors.full_messages.each do |message|  %>
		<div class="form-group alert alert-danger " role="alert">
			* <%= message%>
		</div>
	<% end %>		
		<div class="form-group">
		<%= f.text_field :title, placeholder: "Título", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.text_area :body, placeholder: "Escribe aqui el artículo", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.submit  "Guardar", class: "btn btn-default" %>
		</div>

	</div>
	

<% end %>